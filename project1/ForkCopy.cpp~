#include "./header.h"

int main(int argc, char *argv[])
{	
	pid_t ForkPID;
	ForkPID = fork();

	switch(ForkPID)
	{
		//-1,fork failure
		case -1:
			printf("Error:Faild to fork.\n");break;
		//0,this is the child process
		case 0:
		execlp("./MyCopy",argv[0],argv[1],argv[2],NULL);
		break;
		//>0,parent process and the PID is the child's PID
		default:	
		wait(NULL);
		break;	
	}

	return 1;
	
}
